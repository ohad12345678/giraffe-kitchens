# Docker Environment Variables
# Use this file with: docker-compose --env-file .env.docker up

# Application
ENV=production
DEBUG=False
APP_NAME=Giraffe Kitchens API
VERSION=1.0.0

# Database - PostgreSQL (Docker)
DATABASE_URL=postgresql://giraffe:giraffe123@postgres:5432/giraffe_kitchens

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Add your frontend URL
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost:5173

# Sentry (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Anthropic AI
ANTHROPIC_API_KEY=

# PostgreSQL Database Settings
POSTGRES_USER=giraffe
POSTGRES_PASSWORD=giraffe123
POSTGRES_DB=giraffe_kitchens
